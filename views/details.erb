          <%= erb(:prerequisite_field,{},{prerequisite: :initiate_login_uri,
                                          label: 'Launch URI',
                                          value: request.base_url + BASE_PATH + '/' + instance.id + '/' + instance.client_endpoint_key + '/launch',
                                          readonly: true })%>

          <%= erb(:prerequisite_field,{},{prerequisite: :redirect_uris,
                                          label: 'Redirect URI',
