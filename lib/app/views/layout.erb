<!doctype html>
<html lang="en">
  <head>
    <title><%=app_name%></title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="<%=base_path%>/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="<%=base_path%>/static/open-iconic/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="<%=base_path%>/static/css/styles.css">
  </head>
  <body>
    <nav class="navbar navbar-expand navbar-dark bg-dark">
      <div class="container">
        <div class='inferno-branding'>
          <a class="navbar-brand" href="<%=base_path%>/">INFERNO</a>
          <span class='navbar-brand-subheading'>Developer Preview</span>
        </div>
        <!-- Navbar content -->
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" target="_blank" href="https://github.com/siteadmin/inferno/">Documentation</a>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <footer class="footer">
      <div class="container row">
        <div class="col-sm text-left">
          <a target="_blank" href="https://github.com/siteadmin/inferno">Open Source</a>
        </div>
        <div class="col-sm text-center">
          <a target="_blank" href="https://github.com/siteadmin/inferno/issues">Issues</a>
        </div>
        <div class="col-sm text-right">
          Version <%= version %>
        </div>
      </div>
    </footer>

    <script>
       window.basePath = '<%= base_path %>';
    </script>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Tether.js, then Popper.js, then Bootstrap JS -->
    <script src="<%=base_path%>/static/js/jquery-3.2.1.min.js"></script>
    <script src="<%=base_path%>/static/js/tether.min.js"></script>
    <script src="<%=base_path%>/static/js/popper.min.js"></script>
    <script src="<%=base_path%>/static/js/bootstrap.min.js"></script>
    <script src="<%=base_path%>/static/js/app.js"></script>

  </body>
</html>
