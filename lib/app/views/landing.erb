<!-- custom landing page -->

<body onload="loadTestSet()">
  <div class="container pt-3" id="content">

    <%# Start Form %>
    <div class="start-testing" id="start-testing">
      <h3>Start Testing</h3>

      <form>
        <div class="form-group">
          <label for="exampleFormControlInput1">FHIR Server</label>
          <input type="url" class="form-control start-form" id="form-fhir-server" placeholder="http://your-fhir-server.org" required>
        </div>
        <div class="form-group">
          <label for="form-test-set">Test Set</label>
          <select class="form-control start-form" id="form-test-set"></select>
        </div>
        <div class="form-group form-row">
          <div class="col">
            <label for="form-client-id">Client ID</label>
            <input type="text" class="form-control start-form" id="form-client-id">
          </div>
          <div class="col">
            <label for="form-client-secret">Client ID</label>
            <input type="text" class="form-control start-form" id="form-client-secret">
          </div>
        </div>
        <div class="form-group">
          <label for="form-test-set">Try Me Options</label>
          <div class="form-check" id="presets"></div>
        </div>
      </form>
      <input class="btn btn-primary" id="create-instance" onclick="submitForm()" type="submit" value="Submit">
    </div>

    <%# Instance Card %>
    <div class="instance" id="instance" style="display: none;">
      <div class="card">
        <div class="card-header" id="instance-module"></div>
        <div class="card-body">
          <button type="button" class="btn btn-primary" onclick="updateInstance()">
            State
          </button>
          <button type="button" class="btn btn-primary" onclick="updateReport()">
            Report
          </button>
        </div>
      </div>

      <%# State Modal %>
      <div class="modal fade" id="instance-state" tabindex="-1" role="dialog" aria-labelledby="instance-state" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">State</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <pre class="instance-state-content" id="instance-state-content"></pre>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <%# Report Modal %>
      <div class="modal fade" id="instance-report" tabindex="-1" role="dialog" aria-labelledby="instance-report" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Report</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <pre class="instance-report-content" id="instance-report-content"></pre>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="module pt-3" id="module" style="display: none">

      <%# Loading Modal %>
      <div class="modal fade" id="loading" tabindex="-1" role="dialog" aria-labelledby="loading" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Loading...</h5>
            </div>
            <div class="modal-body">
              <p id="loading-progress-description"></p>
              <div class="progress">
                <div class="progress-bar progress-bar-striped" id="loading-progress-bar" role="progressbar" style="width: 0%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100">0%</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%# Result Modal %>
      <div class="modal fade" id="instance-result" tabindex="-1" role="dialog" aria-labelledby="instance-result" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Result</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <pre class="instance-result-content" id="instance-result-content"></pre>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

      <%# HTTP Modal %>
      <div class="modal fade" id="instance-http" tabindex="-1" role="dialog" aria-labelledby="instance-http" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">HTTP Requests</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              <pre class="instance-http-content" id="instance-http-content"></pre>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>

    </div>

    <script src="<%=base_path%>/static/js/can-ndjson-stream.js"></script>
    <script src="<%=base_path%>/static/js/api.js"></script>
  </div>
</body>